{%
  set classes = [
    'paragraph',
    'paragraph--type--' ~ paragraph.bundle|clean_class,
    view_mode ? 'paragraph--view-mode--' ~ view_mode|clean_class,
    not paragraph.isPublished() ? 'paragraph--unpublished'
  ]
%}
{% block paragraph %}
  <div{{ attributes.addClass(classes) }}>
    {% block content %}
      {{ content.repeat_title.0 }}
      {{ content.repeat_cta_image.0 }}
      {{ content.repeat_text.0 }}
      {{ content.repeat_single_cta.0 }}
    {% endblock %}
  </div>
{% endblock paragraph %}
